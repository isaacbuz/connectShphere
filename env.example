# ConnectSphere Environment Configuration Template
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here
PERSPECTIVE_API_KEY=your_perspective_api_key_here

# Database Configuration
MONGODB_URI=mongodb://admin:password@mongodb:27017/connectsphere?authSource=admin
REDIS_URL=redis://redis:6379

# Kafka Configuration
KAFKA_BROKERS=kafka:9092

# IPFS Configuration
IPFS_API=http://ipfs:5001
IPFS_GATEWAY=http://ipfs:8080

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_key
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
PRIVATE_KEY=your_deployment_private_key_here

# Dogecoin Configuration
DOGE_RPC_URL=https://dogechain.info/api/v1
DOGE_WALLET_ADDRESS=your_doge_wallet_address

# Pinecone Configuration
PINECONE_ENV=us-west4-gcp
PINECONE_INDEX_NAME=connectsphere-content

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE_TIME=7d

# Platform Configuration
PLATFORM_FEE_PERCENTAGE=2.5
FEE_RECIPIENT_ADDRESS=0x...

# AI Model Configuration
DEFAULT_LLM_MODEL=gpt-4-turbo
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=2000

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Security
CORS_ORIGIN=http://localhost:3001
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=admin

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_CONTENT_MODERATION=true
ENABLE_PERSONALIZATION=true
ENABLE_FEDERATED_LEARNING=false
ENABLE_GOVERNANCE=true

# External APIs
LUNARCRUSH_API_KEY=your_lunarcrush_key
CHAINLINK_ORACLE_ADDRESS=0x...

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token

# Development
DEBUG=false
MOCK_BLOCKCHAIN=false
USE_LOCAL_MODELS=false 