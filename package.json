{
  "name": "connectsphere",
  "version": "1.0.0",
  "description": "Decentralized AI-powered social platform with autonomous agents",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "k8s:deploy": "kubectl apply -f infrastructure/k8s/",
    "agents:start": "python src/agents/main.py",
    "blockchain:test": "hardhat test",
    "blockchain:deploy": "hardhat run scripts/deploy.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.6.3",
    "ethers": "^6.8.0",
    "web3": "^4.1.2",
    "ipfs-http-client": "^60.0.1",
    "socket.io": "^4.6.2",
    "redis": "^4.6.10",
    "bullmq": "^4.12.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "axios": "^1.5.1",
    "openai": "^4.14.0",
    "@pinecone-database/pinecone": "^1.1.0",
    "langchain": "^0.0.180",
    "kafkajs": "^2.2.4",
    "@grpc/grpc-js": "^1.9.7"
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "hardhat": "^2.18.1",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
} 